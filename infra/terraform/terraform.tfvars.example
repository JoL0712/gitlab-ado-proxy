# Example Terraform variables file.
# Copy this to terraform.tfvars and customize for your deployment.

###############################################################################
# Required Configuration
###############################################################################

# Azure DevOps organization URL (project-agnostic).
ado_base_url = "https://dev.azure.com/your-org"

###############################################################################
# Optional Configuration
###############################################################################

# AWS region for deployment.
aws_region = "us-east-1"

# Deployment environment.
environment = "prod"

# Azure DevOps API version.
ado_api_version = "7.1"

# OAuth configuration (optional, but recommended for security).
# If set, only requests with matching client_id and client_secret will be allowed.
oauth_client_id     = ""
oauth_client_secret = ""

# Access control configuration (optional).
# Comma-separated list of allowed ADO project names.
# If set, only repositories from these projects will be accessible.
# If empty, all projects are accessible.
allowed_projects = ""

# Lambda configuration.
lambda_timeout = 30
lambda_memory  = 256

# Function URL authentication (NONE for public, AWS_IAM for IAM auth).
function_url_auth_type = "NONE"

# CORS configuration (use specific origins in production).
cors_allowed_origins = ["*"]

# Logging configuration.
log_retention_days = 14

# Monitoring (optional).
enable_alarms       = false
alarm_sns_topic_arn = ""

###############################################################################
# DynamoDB Storage Configuration
###############################################################################

# Enable DynamoDB for persistent storage (required for OAuth in serverless).
enable_dynamodb_storage = true

# DynamoDB billing mode (PAY_PER_REQUEST for serverless, PROVISIONED for predictable workloads).
dynamodb_billing_mode = "PAY_PER_REQUEST"

# Provisioned capacity (only used when billing_mode = PROVISIONED).
# dynamodb_read_capacity  = 5
# dynamodb_write_capacity = 5

# Enable Point-in-Time Recovery for data protection.
dynamodb_enable_pitr = false
