{
  "name": "gitlab-ado-proxy",
  "version": "1.0.0",
  "description": "Cloud-agnostic middleware that emulates GitLab REST API and proxies to Azure DevOps",
  "type": "module",
  "main": "dist/adapters/local.js",
  "scripts": {
    "dev": "tsx watch src/adapters/local.ts",
    "build": "tsc",
    "start": "node dist/adapters/server.js",
    "start:dev": "node dist/adapters/local.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.700.0",
    "@aws-sdk/lib-dynamodb": "^3.700.0",
    "@hono/node-server": "^1.13.0",
    "dotenv": "^17.2.3",
    "hono": "^4.11.0",
    "level": "^10.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/node": "^22.10.0",
    "esbuild": "^0.24.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
